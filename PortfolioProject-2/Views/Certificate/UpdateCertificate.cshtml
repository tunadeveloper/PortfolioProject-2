@model PortfolioProject_2.Models.Entity.Certificates
@{
    ViewBag.Title = "UpdateCertificate";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h4>Sertifika Düzenleme</h4>
<br />
<form method="post">
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Alınma tarihi")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Sertifikayı Düzenle</button>
   
</form>

