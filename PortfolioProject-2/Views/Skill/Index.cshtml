@using PortfolioProject_2.Models.Entity
@model List<Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{string barColor = "";
    string labelColor = "";

}
<br />

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listesi</h3>
                            </div>
                            <div class="card-body">
                                <a href="/Skill/AddSkill" class="btn btn-success">Yetenek Ekle</a>
                                <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Value <= 50 && x.Value >= 0)
                                            {
                                                barColor = "progress-bar bg-danger";
                                                labelColor = "badge bg-danger";
                                            }
                                            else if (x.Value <= 70 && x.Value >= 51)
                                            {
                                                barColor = "progress-bar bg-warning";
                                                labelColor = "badge bg-warning";
                                            }
                                            else if (x.Value <= 84 && x.Value >= 71)
                                            {
                                                barColor = "progress-bar bg-success";
                                                labelColor = "badge bg-success";
                                            }
                                            else if (x.Value <= 100 && x.Value >= 85)
                                            {
                                                barColor = "progress-bar bg-primary";
                                                labelColor = "badge bg-primary";
                                            }
                                            <tr>
                                                <td>@x.Id.</td>
                                                <td>@x.Skills</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@barColor" style="width: @x.Value%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelColor">@x.Value%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Skill/UpdateSkill/@x.Id">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@x.Id">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>