@model PortfolioProject_2.Models.Entity.SocialMedia
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Düzenleme</h4>
<br />
<form method="post">
    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder= "Örn. Instagram" })
    <br />
    @Html.Label("Sosyal Medya Adresi")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control", placeholder = "Örn. https://www.instagram.com/username" })
    <br />
    @Html.Label("Sosyal Medya Simgesi")
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", placeholder = "Örn. fas fa-instagram" })
    <br />
    <button class="btn btn-warning">Sosyal Medyayı Düzenle</button>
</form>